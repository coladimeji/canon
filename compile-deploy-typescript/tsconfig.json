{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "node",
    "module": "es2020", // Update this line to one of the valid options
    "baseUrl": ".",
    "paths": {
      "web3": ["./node_modules/web3"],
      "dotenv": ["./node_modules/dotenv"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "typeRoots": ["./types", "./node_modules/@types"],
    "types": ["solc","node"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
